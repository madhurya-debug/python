alphabets='abcdefghijklmnopqrstuvwxyz'
imessage=input('please enter a message:')
key=input('please enter a value for key between 0 to 9:')
print(key)
if key == '0':
  print('there will not be any change in the message!')
  x=input('do you wanna continue?\n y:yes\n n:no')
else:
  x=0
  fkey=int(float(key))
  print('value of key=',fkey)
  ilen=len(imessage)
  newmsg=''
  for character in imessage:
    position=alphabets.find(character)
    newpos=(position+fkey)%26
    newmsg=newmsg+alphabets[newpos]
  print('encrypted message :',newmsg)
if x=='n':
  print('thankyou!')
elif x=='y':
  fkey=int(float(key))
  print('value of key=',fkey)
  ilen=len(imessage)
  newmsg=''
  for character in imessage:
    position=alphabets.find(character)
    newpos=(position+fkey)%26
    newmsg=newmsg+alphabets[newpos]
  print('encrypted message :',newmsg)
